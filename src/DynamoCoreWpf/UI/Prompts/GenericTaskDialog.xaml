<Window x:Class="Dynamo.UI.Prompts.GenericTaskDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="clr-namespace:Dynamo.UI"
        Title="Generic Task Dialog"
        Width="660"
        SizeToContent="Height"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        Style="{DynamicResource DynamoWindowStyle}">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="{x:Static ui:SharedDictionaryManager.DynamoModernDictionaryUri}" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid Background="#444444">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <Image Name="DialogIcon"
                   Width="96" Height="96"
                   Margin="25"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center">
        </Image>

        <StackPanel Grid.Row="0" Grid.Column="1"
                        Margin="0,25,25,25">

            <TextBlock Name="SummaryText"
                           FontSize="13"
                           Foreground="#bbbbbb"
                           HorizontalAlignment="Stretch"
                           TextWrapping="Wrap"
                           Margin="0,0,0,5">
            </TextBlock>

            <TextBlock Name="DescriptionText"
                           FontSize="16"
                           Foreground="#bbbbbb"
                           HorizontalAlignment="Stretch"
                           TextWrapping="Wrap">
            </TextBlock>

        </StackPanel>

        <StackPanel Name="LeftButtonStackPanel"
                        Grid.Row="1" Grid.ColumnSpan="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Left"
                        Margin="10,0,10,10">

            <Button Content="Sample Left Button"
                        Style="{DynamicResource ResourceKey=STextButton}"
                        Visibility="Visible" />

        </StackPanel>

        <StackPanel Name="RightButtonStackPanel"
                        Grid.Row="1" Grid.ColumnSpan="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="10,0,10,10">

            <Button Content="Sample Right Button"
                        Style="{DynamicResource ResourceKey=STextButton}"
                        Visibility="Visible" />

        </StackPanel>

        <TextBox Name="DetailedContent"
                     x:FieldModifier="public"
                     Grid.Row="3" Grid.ColumnSpan="2"
                     Style="{DynamicResource ResourceKey=SDarkTextBox}"
                     HorizontalAlignment="Stretch"
                     VerticalAlignment="Stretch"
                     Margin="10,0,10,10"
                     CaretBrush="White"
                     BorderThickness="0"
                     Height="200"
                     IsReadOnly="True"
                     HorizontalScrollBarVisibility="Auto"
                     VerticalScrollBarVisibility="Auto"
                     Visibility="Visible" />
    </Grid>
</Window>