<Window x:Class="Dynamo.Prompts.ChangeScaleFactorPrompt"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="clr-namespace:Dynamo.UI"
        xmlns:p="clr-namespace:Dynamo.Wpf.Properties;assembly=DynamoCoreWpf"
        Title="{x:Static p:Resources.ChangeScaleFactorPromptWindowTitle}" Height="400" Width="640"
        WindowStartupLocation="CenterOwner"
        Style="{DynamicResource DynamoWindowStyle}">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ui:SharedResourceDictionary Source="{x:Static ui:SharedDictionaryManager.DynamoModernDictionaryUri}" />
                <ui:SharedResourceDictionary Source="{x:Static ui:SharedDictionaryManager.DynamoConvertersDictionaryUri}"/>
                <ui:SharedResourceDictionary Source="{x:Static ui:SharedDictionaryManager.DynamoColorsAndBrushesDictionaryUri}" />
            </ResourceDictionary.MergedDictionaries>
            <Style x:Key="UnitsSliderThumb" TargetType="{x:Type Thumb}">
                <Setter Property="OverridesDefaultStyle" Value="True" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type Thumb}">
                            <StackPanel Orientation="Horizontal">
                                <Border Background="#888" Height="180" Width="160" Cursor="SizeNS" />
                                <Border Background="#888" Margin="5,0,0,0" Height="180" Width="5" CornerRadius="3" />
                            </StackPanel>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            <Style x:Key="UnitsSliderStyle" TargetType="{x:Type Slider}">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type Slider}">
                            <Border Background="Transparent">
                                <Grid>
                                    <Border x:Name="TrackBackground"
                                            BorderThickness="2" CornerRadius="1"
                                            HorizontalAlignment="Center" Width="3"
                                            Background="#888" />
                                    <Track x:Name="PART_Track">
                                        <Track.Thumb>
                                            <Thumb x:Name="Thumb" Style="{StaticResource UnitsSliderThumb}" />
                                        </Track.Thumb>
                                    </Track>
                                </Grid>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            <Style x:Key="UnitsPanelStyle" TargetType="{x:Type StackPanel}">
                <Style.Resources>
                    <Style TargetType="{x:Type TextBlock}">
                        <Setter Property="Width" Value="160" />
                        <Setter Property="Height" Value="20" />
                        <Setter Property="Padding" Value="5,0" />
                        <Setter Property="TextAlignment" Value="Right" />
                        <Setter Property="VerticalAlignment" Value="Center" />
                        <Setter Property="Foreground" Value="#fff" />
                    </Style>
                </Style.Resources>
            </Style>
            <Style x:Key="ScalesToggleButtonStyle" TargetType="{x:Type ToggleButton}">
                <Setter Property="Margin" Value="5 0 5 0"/>
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="BorderBrush" Value="Transparent"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type ToggleButton}">
                            <Border Background ="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="#46484c"/>
                        <Setter Property="BorderBrush" Value="WhiteSmoke"/>
                        <Setter Property="BorderThickness" Value="1"/>
                    </Trigger>
                    <Trigger Property="IsChecked" Value="true">
                        <Setter Property="Background" Value="#46484c"/>
                        <Setter Property="BorderBrush" Value="White"/>
                        <Setter Property="BorderThickness" Value="1"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
            <Style x:Key="DescriptionTextBlockStyle" TargetType="{x:Type TextBlock}">
                <Setter Property="TextBlock.Margin" Value="10,5,10,10"/>
                <Setter Property="TextBlock.Width" Value="auto"/>
                <Setter Property="TextBlock.FontSize" Value="12"/>
                <Setter Property="TextBlock.Foreground" Value="WhiteSmoke"/>
                <Setter Property="TextBlock.TextWrapping" Value="Wrap"/>
                <Setter Property="TextBlock.VerticalAlignment" Value="Bottom"/>
            </Style>
            <Style x:Key="ScaleButtonStyle" TargetType="{x:Type Button}">
                <Setter Property="Margin" Value="10"/>
                <Setter Property="HorizontalAlignment" Value="Stretch"/>
                <Setter Property="VerticalAlignment" Value="Top"/>
                <Setter Property="IsDefault" Value="True"/>
                <Setter Property="TabIndex" Value="2"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate>
                            <Grid x:Name="inner"
                                  Background="#373737">
                                <TextBlock x:Name="text"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Margin="10, 10, 10, 10"
                                           Foreground="#bbbbbb"
                                           FontSize="14px"
                                           Text="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Content}">
                                </TextBlock>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Background="#333">
        <StackPanel Margin="15">
            <TextBlock Name="PromptText"
                       Foreground="WhiteSmoke"
                       Margin="10 0 10 0"
                       Padding="0,0,0,15"
                       FontSize="15"
                       TextWrapping="Wrap"
                       Text="{x:Static p:Resources.ChangeScaleFactorPromptCaptionText}" />
            <StackPanel Orientation="Horizontal" Background="#555" Visibility="Collapsed">
                <Grid Margin="5" Width="170">
                    <StackPanel x:Name="UnitsList"
                                Style="{StaticResource UnitsPanelStyle}"
                                Margin="0,0,10,0"
                                Orientation="Vertical"
                                Panel.ZIndex="10"
                                IsHitTestVisible="False">
                    </StackPanel>
                    <Slider Name="UnitsSlider"
                            Orientation="Vertical"
                            Style="{StaticResource UnitsSliderStyle}"
                            IsSnapToTickEnabled="True"
                            TickFrequency="1"
                            Value="0"
                            ValueChanged="Slider_Changed" />
                </Grid>
                <Border Margin="0,5" Width="170" Background="#fff">
                    <DockPanel>
                        <TextBlock Name="DescriptionBox"
                                   Margin="7"
                                   Width="160"
                                   FontSize="12"
                                   TextWrapping="Wrap"
                                   Text="{x:Static p:Resources.ChangeScaleFactorPromptDescriptionBox}"
                                   DockPanel.Dock="Top"/>
                        <ComboBox Name="UnitComboBox"
                                  Margin="7,0"
                                  SelectionChanged="UnitComboBox_Changed"
                                  DockPanel.Dock="Top">
                        </ComboBox>
                        <TextBlock Name="DescriptionScaleRange"
                                   Margin="7,0,7,7"
                                   Width="160"
                                   FontSize="12"
                                   TextWrapping="Wrap"
                                   VerticalAlignment="Bottom"
                                   DockPanel.Dock="Bottom"/>
                        <TextBlock Name="DescriptionDefaultSetting"
                                   Margin="7,0"
                                   Width="160"
                                   FontSize="12"
                                   FontWeight="Bold"
                                   TextWrapping="Wrap"
                                   VerticalAlignment="Bottom"
                                   DockPanel.Dock="Bottom" />
                    </DockPanel>
                </Border>
            </StackPanel>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <ToggleButton Grid.Column="0"
                        Style="{StaticResource ScalesToggleButtonStyle}"
                        Name="SmallButton"
                        Click="ScaleButton_click">
                    <DockPanel>
                        <Button Content="{x:Static p:Resources.ScalingSmallButton}"
                                Style="{StaticResource ScaleButtonStyle}"
                                DockPanel.Dock="Top"/>
                        <TextBlock Style="{StaticResource DescriptionTextBlockStyle}"
                                   Text="Use this working range to model objects the size of a city block that can stretch a few kilometers and with no more accuracy than a millimeter."
                                   DockPanel.Dock="Bottom"/>
                        <TextBlock Margin="10,0,10,0"
                                   Width="auto"
                                   Text="Default setting"
                                   FontSize="12"
                                   Foreground="WhiteSmoke"
                                   FontWeight="Bold"
                                   TextWrapping="Wrap"
                                   VerticalAlignment="Bottom"
                                   DockPanel.Dock="Bottom" />
                    </DockPanel>
                </ToggleButton>
                <ToggleButton Grid.Column="1"
                              Style="{StaticResource ScalesToggleButtonStyle}"
                              Name="mediumButton"
                              Click="ScaleButton_click">
                    <DockPanel>
                        <Button Content="{x:Static p:Resources.ScalingMediumButton}"
                                Style="{StaticResource ScaleButtonStyle}"
                                DockPanel.Dock="Top" />
                        <TextBlock Style="{StaticResource DescriptionTextBlockStyle}"
                                   Text="Use this working range to model objects the size of a city block that can stretch a few kilometers and with no more accuracy than a millimeter."
                                   DockPanel.Dock="Bottom"/>
                        <TextBlock Margin="10,0,10,0"
                                   Width="auto"
                                   FontSize="12"
                                   Foreground="WhiteSmoke"
                                   FontWeight="Bold"
                                   TextWrapping="Wrap"
                                   VerticalAlignment="Bottom"
                                   DockPanel.Dock="Bottom" />
                    </DockPanel>
                </ToggleButton>
                <ToggleButton Grid.Column="2"
                              Style="{StaticResource ScalesToggleButtonStyle}"
                              Name="largeButton"
                              Click="ScaleButton_click">
                    <DockPanel>
                        <Button Content="{x:Static p:Resources.ScalingLargeButton}"
                                Style="{StaticResource ScaleButtonStyle}"
                                DockPanel.Dock="Top" />
                        <TextBlock Style="{StaticResource DescriptionTextBlockStyle}"
                               Text="Use this working range to model objects the size of a city block that can stretch a few kilometers and with no more accuracy than a millimeter."
                               DockPanel.Dock="Bottom"/>
                        <TextBlock Margin="10,0,10,0"
                               Width="auto"
                               FontSize="12"
                               Foreground="WhiteSmoke"
                               FontWeight="Bold"
                               TextWrapping="Wrap"
                               VerticalAlignment="Bottom"
                               DockPanel.Dock="Bottom" />
                    </DockPanel>
                </ToggleButton>
                <ToggleButton Grid.Column="3"
                              Style="{StaticResource ScalesToggleButtonStyle}"
                              Name="extraLargeButton"
                              Click="ScaleButton_click">
                    <DockPanel>
                        <Button Content="{x:Static p:Resources.ScalingExtraLargeButton}"
                                Style="{StaticResource ScaleButtonStyle}"
                                DockPanel.Dock="Top"/>
                        <TextBlock Style="{StaticResource DescriptionTextBlockStyle}"
                                Text="Use this working range to model objects the size of a city block that can stretch a few kilometers and with no more accuracy than a millimeter."
                                DockPanel.Dock="Bottom"/>
                        <TextBlock Margin="10,0,10,0"
                                Width="auto"
                                FontSize="12"
                                Foreground="WhiteSmoke"
                                FontWeight="Bold"
                                TextWrapping="Wrap"
                                VerticalAlignment="Bottom"
                                DockPanel.Dock="Bottom" />
                    </DockPanel>
                </ToggleButton>
            </Grid>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,5,0">
                <Button Content="{x:Static p:Resources.ApplyAndRecomputeGraphButton}"
                            Style="{DynamicResource ResourceKey=STextButton}"
                            Margin="5"
                            HorizontalAlignment="Right"
                            Name="applyButton"
                            VerticalAlignment="Top"
                            Width="auto"
                            MinWidth="75"
                            Click="Apply_Click"
                            IsDefault="True"
                            TabIndex="2" />
                <Button Content="{x:Static p:Resources.CancelButton}"
                        Style="{DynamicResource ResourceKey=STextButton}"
                        Margin="5" HorizontalAlignment="Right"
                        Name="cancelButton"
                        VerticalAlignment="Top"
                        Width="auto"
                        MinWidth="75"
                        Click="Cancel_Click"
                        IsCancel="True"
                        TabIndex="3" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
