                                         Grid.Row="0" Grid.RowSpan="1" Grid.Column="3"
                                         Grid.ColumnSpan="2" 
                                         Width="{TemplateBinding Height}"
                                         Height="{TemplateBinding Height}"
                                         Fill="{StaticResource TabItemUnSelected}"
                                         Panel.ZIndex="0"/>
