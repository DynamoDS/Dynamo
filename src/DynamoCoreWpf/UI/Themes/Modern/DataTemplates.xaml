<ResourceDictionary   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:viewModels="clr-namespace:Dynamo.ViewModels;assembly=DynamoCoreWpf"
                      xmlns:controls="clr-namespace:Dynamo.Controls;assembly=DynamoCoreWpf"
                      xmlns:nodes="clr-namespace:Dynamo.Nodes;assembly=DynamoCoreWpf"
                      xmlns:ui="clr-namespace:Dynamo.UI;assembly=DynamoCoreWpf"
                      xmlns:sys="clr-namespace:System;assembly=mscorlib"
                      xmlns:models="clr-namespace:Dynamo.Models;assembly=DynamoCore">

    <ResourceDictionary.MergedDictionaries>
        <ui:SharedResourceDictionary Source="{x:Static ui:SharedDictionaryManager.DynamoConvertersDictionaryUri}" />
    </ResourceDictionary.MergedDictionaries>

    <controls:NodeViewTemplateSelector x:Key="NodeViewModelTemplateSelector">
        <controls:NodeViewTemplateSelector.DeferredTemplate>
            <DataTemplate>
                <controls:DeferredContent>
                    <controls:DeferredContent.Content>
                        <Border CornerRadius="10 10 0 0" Background="#3C3C3C">
                            <TextBlock Text="Loading..." Foreground="White"
                                   VerticalAlignment="Center" HorizontalAlignment="Center" />
                        </Border>
                    </controls:DeferredContent.Content>
                    <controls:DeferredContent.DeferredContentTemplate>
                        <DataTemplate>
                            <controls:NodeView />
                        </DataTemplate>
                    </controls:DeferredContent.DeferredContentTemplate>
                </controls:DeferredContent>
            </DataTemplate>
        </controls:NodeViewTemplateSelector.DeferredTemplate>
        <controls:NodeViewTemplateSelector.DirectTemplate>
            <DataTemplate>
                <controls:NodeView />
            </DataTemplate>
        </controls:NodeViewTemplateSelector.DirectTemplate>
    </controls:NodeViewTemplateSelector>

    <DataTemplate DataType="{x:Type viewModels:NoteViewModel}">
        <nodes:NoteView></nodes:NoteView>
    </DataTemplate>

    <DataTemplate DataType="{x:Type viewModels:InfoBubbleViewModel}">
        <controls:InfoBubbleView></controls:InfoBubbleView>
    </DataTemplate>

    <DataTemplate DataType="{x:Type viewModels:AnnotationViewModel}">
        <nodes:AnnotationView></nodes:AnnotationView>
    </DataTemplate>

</ResourceDictionary>
