<UserControl x:Class="Dynamo.Controls.dynNodeUI"
    x:ClassModifier="public"
    x:FieldModifier="public"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:local="clr-namespace:Dynamo.Controls"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dropShadow="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Aero"
    Height="300"
    Width="160" 
    Name="topControl" 
    Loaded="topControl_Loaded" 
    KeyUp="OnKeyUp" 
    PreviewKeyUp="OnPreviewKeyUp"
    MouseLeftButtonDown="topControl_MouseLeftButtonDown"
    MouseRightButtonDown="topControl_MouseRightButtonDown" >
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes\DynamoColorsAndBrushes.xaml" />
                <ResourceDictionary Source="Themes\DynamoConverters.xaml" />
                <ResourceDictionary Source="Themes\DynamoModern.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <UserControl.ToolTip>
        <Grid Width ="Auto" MaxWidth="235" MaxHeight="200" Height="Auto">
            <Canvas Canvas.Left="0" Canvas.Top="0" Width="Auto">
                <Rectangle 
                    RadiusX="10" 
                    RadiusY="10" 
                    HorizontalAlignment="Stretch" 
                    VerticalAlignment="Stretch" 
                    Fill="Gray" 
                    Stroke="#FF505050"/>
            </Canvas>
            <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <TextBlock Name="tt_elementName" HorizontalAlignment="Stretch" 
                           VerticalAlignment="Top" Text="{Binding Path=NickName}" FontSize="12" FontFamily="Arial" FontWeight="Bold" Margin="2"/>
                <TextBlock Name="tt_longText" TextWrapping="Wrap" HorizontalAlignment="Stretch" VerticalAlignment="Top" 
                           Text="{Binding Path=ToolTipText}" FontFamily="Consolas" FontSize="11" TextTrimming="WordEllipsis" Margin="2"/>
            </StackPanel>
        </Grid>
    </UserControl.ToolTip>
    <Grid Name="grid">
        <Grid.ContextMenu>
            <ContextMenu Name="MainContextMenu" x:FieldModifier="public" ContextMenuOpening="MainContextMenu_ContextMenuOpening">
                <MenuItem Name="deleteElem_cm" Header="Delete" Click="deleteElem_cm_Click" />
            </ContextMenu>
        </Grid.ContextMenu>
        <Grid Name="gridLeft" 
            Margin="-7,5,0,5"
            HorizontalAlignment="Left"
            IsHitTestVisible="True" 
            Background="Transparent"
            Canvas.ZIndex="90">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"/>
                <!--<ColumnDefinition Width="Auto"/>-->
            </Grid.ColumnDefinitions>
        </Grid>
        <Grid Name="gridRight" 
              HorizontalAlignment="Right" 
              VerticalAlignment="Stretch"
              Margin="0,5,-7,5" 
              IsHitTestVisible="True" 
              Background="Transparent"
              Canvas.ZIndex="90">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"/>
                <!--<ColumnDefinition Width="Auto"/>-->
            </Grid.ColumnDefinitions>
        </Grid>
        <Canvas Canvas.Left="0" 
                Canvas.Top="0" 
                Name="elementCanvas" 
                Margin="0,0,0,0">
            <Rectangle HorizontalAlignment="Right" 
                       Canvas.Left="0"
                       Canvas.Top="0"
                       Width="{Binding ElementName=topControl, Path=Width}"
                       Height="{Binding ElementName=topControl, Path=Height}"
                       Name="elementRectangle" 
                       RadiusX="10" 
                       RadiusY="10"
                       Canvas.ZIndex="90"
                       Stroke="{Binding Path=IsSelected, Converter={StaticResource BooleanToBrushConverter}, Mode=OneWay}" 
                       StrokeThickness="2"
                       Fill="{Binding Path=State, Converter={StaticResource StateToColorConverter}, Mode=TwoWay}">
                <Rectangle.Effect>
                    <DropShadowEffect Opacity="0" />
                </Rectangle.Effect>
                <!--<Rectangle.Fill>
               <LinearGradientBrush StartPoint="0,0" EndPoint="0,1" >
                  <GradientStop Color="Yellow" Offset="0.0" />
                  <GradientStop Color="Orange" Offset="1" />
               </LinearGradientBrush>
            </Rectangle.Fill>-->
            </Rectangle>
            <!--<Rectangle HorizontalAlignment="Right" 
                       Canvas.Left="0"
                       Canvas.Top="0"
                       Width="{Binding ElementName=topControl, Path=Width}"
                       Height="{Binding ElementName=topControl, Path=Height}"
                       Name="elementBorder" 
                       RadiusX="10" 
                       RadiusY="10"
                       Stroke="#FF555555"
                       StrokeThickness="2"
                       Canvas.ZIndex="90" 
                       IsHitTestVisible="False">
            </Rectangle>-->
            <!--<Rectangle HorizontalAlignment="Right" 
                     Canvas.Left="0"
                     Canvas.Top="2"
                     Width="{Binding ElementName=topControl, Path=Width}"
                     Height="20" 
                     Name="elementShine" 
                     RadiusX="10" 
                     RadiusY="10"
                     Canvas.ZIndex="91"
                     IsHitTestVisible="False">
            <Rectangle.Fill>
               <SolidColorBrush Opacity=".25" Color="white" />
            </Rectangle.Fill>
         </Rectangle>-->
            <TextBlock  Height="Auto" 
                     Name="nickNameBlock" 
                     VerticalAlignment="Center" 
                     HorizontalAlignment="Left"
                     Text="{Binding NickName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     Margin="{Binding RelativeSource={RelativeSource Self}, Path=ActualHeight, Converter={StaticResource MarginConverter}, Mode=OneWay}"
                     FontFamily="Arial"
                     FontSize="12" 
                     FontWeight="Normal" 
                     TextAlignment="Center" 
                     IsHitTestVisible="False" 
                     Canvas.ZIndex="99" 
                     Width="{Binding ElementName=grid, Path=ActualWidth}"
                     MaxWidth="{Binding ElementName=grid, Path=ActualWidth}"
                     TextWrapping="Wrap"
                     Background="Transparent" FontStyle="Normal" Foreground="LightGray">
            <!--<TextBox.Background>
               <SolidColorBrush />
            </TextBox.Background>-->
            <!-- <TextBlock.Effect>
               <DropShadowEffect ShadowDepth="0" Color="WhiteSmoke" BlurRadius="4" />
            </TextBlock.Effect> -->
            </TextBlock>
        </Canvas>
        <Grid Name="inputGrid"
            x:FieldModifier="public"
            VerticalAlignment="Stretch"
            HorizontalAlignment="Stretch"
            Height="Auto"
            Width="Auto"
            Margin="45,5,45,5" Canvas.ZIndex="300"/>
    </Grid>
</UserControl>
