<UserControl
    x:Class="Dynamo.GraphNodeManager.Controls.SearchBoxControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Dynamo.GraphNodeManager.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:p="clr-namespace:Dynamo.GraphNodeManager.Properties"
    xmlns:ui="clr-namespace:Dynamo.UI;assembly=DynamoCoreWpf"
    d:DesignHeight="40"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ui:SharedResourceDictionary Source="{x:Static ui:SharedDictionaryManager.DynamoColorsAndBrushesDictionaryUri}" />
                <ui:SharedResourceDictionary Source="{x:Static ui:SharedDictionaryManager.DynamoModernDictionaryUri}" />
                <ResourceDictionary Source="ControlColorsAndBrushes.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <local:NonEmptyStringToCollapsedConverter x:Key="NonEmptyStringToCollapsedConverter" />
            <local:MultiBooleanToVisibilityConverter x:Key="MultiBooleanToVisibilityConverter" />
            <Style x:Key="TextBoxStyle" TargetType="TextBox">
                <Setter Property="Background" Value="Transparent" />
                <Setter Property="Padding" Value="15,10,5,5" />
                <Setter Property="FontSize" Value="11" />
                <Setter Property="Foreground" Value="{StaticResource DarkThemeBodyMediumBrush}" />
            </Style>
            <Style x:Key="TextBlockStyle" TargetType="TextBlock">
                <Setter Property="Background" Value="Transparent" />
                <Setter Property="Padding" Value="15,10,5,5" />
                <Setter Property="FontSize" Value="11" />
                <Setter Property="Foreground" Value="{StaticResource DarkThemeBodyMediumBrush}" />
            </Style>
            <Style x:Key="BorderStyle" TargetType="Border">
                <Setter Property="BorderThickness" Value="0,0,0,1" />
                <Setter Property="Background" Value="Transparent" />
                <Setter Property="BorderBrush" Value="{StaticResource MidGrayBrush}" />
                <Style.Triggers>
                    <DataTrigger Binding="{Binding ElementName=SearchTextBox, Path=IsMouseOver}" Value="True">
                        <Setter Property="BorderBrush" Value="{StaticResource PrimaryCharcoal300Brush}" />
                    </DataTrigger>
                    <DataTrigger Binding="{Binding ElementName=SearchTextBox, Path=IsFocused}" Value="True">
                        <Setter Property="BorderBrush" Value="{StaticResource Blue400Brush}" />
                    </DataTrigger>
                </Style.Triggers>
            </Style>
            <Style x:Key="RectangleStyle" TargetType="Rectangle">
                <Setter Property="Opacity" Value="0" />
                <Setter Property="Fill" Value="{StaticResource MidDarkBlueBrush}" />
                <Style.Triggers>
                    <DataTrigger Binding="{Binding ElementName=SearchTextBox, Path=IsFocused}" Value="True">
                        <DataTrigger.EnterActions>
                            <BeginStoryboard>
                                <Storyboard SpeedRatio="2">
                                    <DoubleAnimation
                                        Storyboard.TargetProperty="Opacity"
                                        To="0.75"
                                        Duration="0:0:1" />
                                </Storyboard>
                            </BeginStoryboard>
                        </DataTrigger.EnterActions>
                        <DataTrigger.ExitActions>
                            <BeginStoryboard>
                                <Storyboard SpeedRatio="2">
                                    <DoubleAnimation
                                        Storyboard.TargetProperty="Opacity"
                                        To="0"
                                        Duration="0:0:1" />
                                </Storyboard>
                            </BeginStoryboard>
                        </DataTrigger.ExitActions>
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <StackPanel Orientation="Vertical">
            <Border VerticalAlignment="Center" Style="{StaticResource BorderStyle}">
                <DockPanel
                    x:Name="SearchBarStackPanel"
                    Margin="4,0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center">
                    <Image
                        x:Name="SearchImage"
                        Width="16px"
                        Height="16px"
                        Margin="0,5,-10,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        SnapsToDevicePixels="True"
                        Source="/GraphNodeManagerViewExtension;component/Images/Search.png"
                        Stretch="UniformToFill" />
                    <Grid HorizontalAlignment="Stretch">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="auto" />
                        </Grid.ColumnDefinitions>

                        <!--  Watermark  -->
                        <TextBlock
                            Name="SearchTextBoxWatermark"
                            Margin="2,0,0,0"
                            VerticalAlignment="Center"
                            IsHitTestVisible="False"
                            Opacity="0.5"
                            Style="{StaticResource TextBlockStyle}"
                            Text="{x:Static p:Resources.SearchBoxWatermarkText}"
                            Visibility="Visible" />

                        <!--  Search Box  -->
                        <TextBox
                            Name="SearchTextBox"
                            HorizontalAlignment="Stretch"
                            BorderThickness="0"
                            CaretBrush="White"
                            Cursor="IBeam"
                            IsKeyboardFocusWithinChanged="SearchTextBox_OnKeyboardFocusWithinChanged"
                            Style="{StaticResource TextBoxStyle}"
                            Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                            TextChanged="SearchTextBox_OnTextChanged" />

                        <!--  Clear Search  -->

                        <Button
                            Name="SearchClearButton"
                            Grid.Column="1"
                            Width="16px"
                            Height="16px"
                            Margin="5,5,0,0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Cursor="Hand"
                            PreviewMouseLeftButtonDown="OnSearchClearButtonClicked"
                            Style="{StaticResource ButtonStyle1}"
                            ToolTip="{x:Static p:Resources.ToolTip_ClearSearchBox}"
                            Visibility="{Binding ElementName=SearchTextBox, Path=Text, Converter={StaticResource NonEmptyStringToCollapsedConverter}}">

                            <Image
                                SnapsToDevicePixels="True"
                                Source="/GraphNodeManagerViewExtension;component/Images/Clear.png"
                                Style="{StaticResource ImageStyle}" />
                        </Button>
                    </Grid>
                </DockPanel>
            </Border>
            <Rectangle Height="5" Style="{StaticResource RectangleStyle}" />
        </StackPanel>
    </Grid>
</UserControl>
