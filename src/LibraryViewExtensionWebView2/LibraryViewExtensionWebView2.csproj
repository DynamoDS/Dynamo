   <Target Name="NpmRunBuild" BeforeTargets="BeforeBuild">
        <!--This command updates the npm registry configuration if necessary-->
        <Exec Command="$(PowerShellCommand) -ExecutionPolicy ByPass -Command $(SolutionDir)\setnpmreg.ps1" />
        <!--This command gets a specific build of the librariejs from npm-->
        <Exec Command="npm pack @dynamods/librariejs@1.0.1" />
    </Target>

    <Target Name="ExtractTGZFile" BeforeTargets="BeforeBuild">
        <!--Locates the .tgz files-->
        <ItemGroup>
            <TGZFiles Include="./dynamods-librariejs-*.tgz" />
        </ItemGroup>

        <!--Gets the last one-->
        <PropertyGroup>
            <Last>%(TGZFiles.Filename)</Last>
        </PropertyGroup>

        <!--Creates the folder for the package-->
        <MakeDir Directories="Packages/Library" />

        <!--Extracts the file to /package-->
        <Exec Command="tar -xzf $(MSBuildProjectDirectory)\$(Last).tgz --strip-components=1 --directory=Packages/Library"></Exec>

        <!--Deletes the tgz file-->
        <Delete Files=" $(MSBuildProjectDirectory)\$(Last).tgz" />
    </Target>

