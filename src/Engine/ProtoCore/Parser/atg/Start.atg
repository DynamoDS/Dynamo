DesignScriptParser
=                           (. Node node = null; .)
    Hydrogen<out node>       
        (. 
            if (!core.IsParsingPreloadedAssembly && !core.IsParsingCodeBlockNode)
            {
                ProtoCore.Utils.CoreUtils.InsertPredefinedAndBuiltinMethods(core, node, builtinMethodsLoaded);
                root = node;
            }
            else
            {
                root = node;
            } 
        .)

