<UserControl x:Class="Dynamo.Controls.InfoBubbleView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:controls="clr-namespace:Dynamo.Controls"
             mc:Ignorable="d"
             Name="InfoBubbleWindowUserControl">
    <UserControl.Resources>
        <ResourceDictionary>
            <controls:OpacityToVisibilityConverter x:Key="OpacityToVisibilityConverter"/>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid x:Name="mainGrid" Background="Transparent" Opacity="{Binding Path=Opacity}" HorizontalAlignment="Left" VerticalAlignment="Top"
          Margin="{Binding Path=Margin}" Visibility="{Binding Path=Opacity, Converter={StaticResource OpacityToVisibilityConverter}}"
           MouseLeave="InfoBubble_MouseLeave">
        <Polygon Name="backgroundPolygon" Fill="{Binding Path=FrameFill}" Stroke="{Binding Path=FrameStrokeColor}" 
                 StrokeThickness="{Binding Path=FrameStrokeThickness}" Points="{Binding Path=FramePoints}"
                 MouseDown="InfoBubble_PreviewMouseDown">
        </Polygon>

        <StackPanel Name="ContentContainer" MouseEnter="InfoBubble_MouseEnter">
            <StackPanel.Resources>
                <Style TargetType="{x:Type ScrollBar}">
                    <Setter Property="Background" Value="White"/>
                    <Setter Property="Foreground" Value="WhiteSmoke"/>
                </Style>
                <Style TargetType="{x:Type TextBox}">
                    <Setter Property="IsReadOnly" Value="True"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Foreground" Value="{Binding Path=TextForeground}"/>
                    <Setter Property="FontWeight" Value="{Binding Path=TextFontWeight}"/>
                    <Setter Property="FontSize" Value="{Binding Path=TextFontSize}"/>
                    <Setter Property="Margin" Value="{Binding Path=ContentMargin}"/>
                    <Setter Property="MaxWidth" Value="{Binding Path=MaxWidth}"/>
                    <Setter Property="MaxHeight" Value="{Binding Path=MaxHeight}"/>
                    <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
                    <Setter Property="TextWrapping" Value="Wrap"/>
                </Style>
            </StackPanel.Resources>
        </StackPanel>
    </Grid>
</UserControl>
