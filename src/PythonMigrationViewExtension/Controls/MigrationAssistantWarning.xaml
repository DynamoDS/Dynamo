<Window x:Class="Dynamo.PythonMigration.Controls.MigrationAssistantWarning"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:ui="clr-namespace:Dynamo.UI;assembly=DynamoCoreWpf"
        xmlns:p="clr-namespace:Dynamo.PythonMigration.Properties;assembly=PythonMigrationViewExtension"
        xmlns:local="clr-namespace:Dynamo.PythonMigration.Controls"
             mc:Ignorable="d" 
        Width="600" SizeToContent="Height"
             d:DesignHeight="450" d:DesignWidth="800"
        Title="Migration Assistant Warning" ResizeMode="NoResize">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ui:SharedResourceDictionary Source="{x:Static ui:SharedDictionaryManager.DynamoModernDictionaryUri}" />
                <ui:SharedResourceDictionary Source="{x:Static ui:SharedDictionaryManager.DynamoConvertersDictionaryUri}" />
                <ui:SharedResourceDictionary Source="{x:Static ui:SharedDictionaryManager.DynamoColorsAndBrushesDictionaryUri}" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    
    <Grid Background="#444444">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="44" />
        </Grid.RowDefinitions>
        <StackPanel Margin="15,25,15,25"
                    Grid.Row="0"
                    Grid.ColumnSpan="2">
            
            <TextBlock Name="SummaryText"
                       Text="{x:Static p:Resources.MigrationAssistantWarningHeader}"
                       FontSize="16"
                       Foreground="{StaticResource WorkspaceTabHeaderActiveTextBrush}"
                       HorizontalAlignment="Stretch"
                       TextWrapping="Wrap"
                       Margin="0,0,0,5">
            </TextBlock>
            
            <TextBlock Name="DescriptionText"
                       Text="{x:Static p:Resources.MigrationAssistantWarningMessage}"
                       FontSize="13"
                       Foreground="{StaticResource WorkspaceTabHeaderActiveTextBrush}"
                       HorizontalAlignment="Stretch"
                       TextWrapping="Wrap">
            </TextBlock>
        </StackPanel>

        <StackPanel Name="DisableAlertCheckboxStackPanel"
                    Grid.Row="1"
                    Grid.ColumnSpan="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Left"
                    Margin="15,0,10,10">
            <CheckBox x:Name="DisableMigrationAssistantCheck"
                      Grid.Row="1"
                      Grid.Column="0"
                      Grid.ColumnSpan="2"
                      VerticalAlignment="Center"
                      FontSize="12"
                      Background="White"
                      IsChecked="False"
                      Content="{x:Static p:Resources.MigrationAssistantWarningDisable}"
                      Foreground="{StaticResource WorkspaceTabHeaderActiveTextBrush}">
            </CheckBox>
        </StackPanel>

        <StackPanel Name="RightButtonStackPanel"
                    Grid.Row="1"
                    Grid.ColumnSpan="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="10,0,10,10">
            <Button Content="{x:Static p:Resources.MigrationAssistantWarningContinueButtonContent}"
                    Name="ContinueButton"
                    Style="{StaticResource STextButton}"
                    Visibility="Visible" />
        </StackPanel>
    </Grid>
</Window>
