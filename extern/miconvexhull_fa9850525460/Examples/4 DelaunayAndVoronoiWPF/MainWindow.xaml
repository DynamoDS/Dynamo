<Window x:Class="ExampleWithGraphics.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"        
        Title="2D Delaunay Trianglation and Voronoi Mesh Example"
        Width="600" Height="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Border Padding="20" Background="White">
            <Canvas Margin="3" ClipToBounds="True" Name="drawingCanvas" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="White" />
        </Border>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="25*"/>
                <ColumnDefinition Width="25*"/>
                <ColumnDefinition Width="25*"/>
                <ColumnDefinition Width="25*"/>
                <ColumnDefinition Width="25*"/>
                <ColumnDefinition Width="25*"/>
                <ColumnDefinition Width="25*"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Name="btnMakePoints" Click="btnMakePoints_Click"  Content="Random" IsDefault="True"/>
            <Button Grid.Column="1" Click="btnMakeGrid_Click"  Content="Grid" IsDefault="True"/>
            <Button Grid.Column="2" Click="btnMakeCircle_Click"  Content="Circle" IsDefault="True"/>
            <Button Grid.Column="3" Click="btnMakeFancy_Click"  Content="Fancy" IsDefault="True" Margin="0 0 5 0"/>
            <Button Grid.Column="4" Name="btnFindDelaunay" Click="btnFindDelaunay_Click"  Content="Delaunay" />
            <Button Grid.Column="5" Name="btnFindVoronoi" Click="btnFindVoronoi_Click"  Content="Voronoi" />
            <TextBlock Grid.Column="6" Name="txtBlkTimer" Text="0.000s" 
                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Grid>
    </Grid>
</Window>
